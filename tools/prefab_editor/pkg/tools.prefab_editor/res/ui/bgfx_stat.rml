<rml>
	<head>
		<script type="text/x-lua">
			local bgfx_model = window.createModel "bgfx_stat" {
				content = "bgfx stat"
			}
			window.addEventListener("message", function(event)
				bgfx_model.content = event.data
			end)
		</script>
		<style>
			bgfx {
				width: auto;
				height: auto;
				font: 120% "宋体";
				color: #7FFF7F;
				text-align: "left";
			}
		</style>
	</head>
	<body style = "pointer-events: none;">
		<bgfx data-model="bgfx_stat">{{content}}</bgfx>
	</body>
</rml>
