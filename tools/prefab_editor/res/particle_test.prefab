---
policy:
    ant.effect|particle_system
    ant.general|name
data:
    name: particle_system_test
    particle_system: {}
---
policy:
    ant.effect|particle_emitter
    ant.general|name
data:
    name: emitter1
    material: /pkg/ant.resources/materials/particle/particle.material
    transform:{}
    scene_entity: true
    state: 1
    emitter:
        particle_type: quad
        attributes:
            ---
            name: spawn
            data:
                type: const
                count: 32
            ---
            name: scale
            data:
                range: {0.15, 0.28}
            ---
            name: translation
            data:
                method: around_sphere
                radius_scale: {1, 1.2}
            ---
            name: orientation
            data:
                method: sphere_random
                longitude: {0, 360}
                latitude: {0, 180}
action:
    attach_particle_system: 1
---
policy:
    ant.effect|particle_emitter
    ant.general|name
data:
    name: emitter2
    material: /pkg/ant.resources/materials/particle/particle.material
    transform:{}
    scene_entity: true
    state: 1
    emitter:
        particle_type: quad
        attributes:
            ---
            name: spawn
            data:
                type: const
                count: 16
            ---
            name: orientation
            data:
                method: face_axis
                axis: {0, 0, 1, 0}
            ---
            name: translation
            data:
                method: around_box
                box_range:
                    x: {1, 1.1}
                    y: {1, 1.1}
            ---
            name: scale
            data:
                range: {0.15, 0.18}
            ---
            name: material_property
            data:
                method: change_property
                properties:
                    s_tex:
                        stage: 0
                        texture: /pkg/ant.resources/textures/particles/sun_flairs.texture
action:
    attach_particle_system: 1