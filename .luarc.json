{
    "runtime": {
        "plugin": "misc/lsp-plugin.lua",
        "special": {
            "import_package": "require"
        }
    },
    "diagnostics": {
        "disable": [
            "different-requires",
            "close-non-object",
            "need-check-nil"
        ],
        "globals": [
            "__EDITOR__"
        ]
    },
    "workspace": {
        "maxPreload": 100000,
        "ignoreDir": [
            "packages/animation/controller/state_machine.lua",
            "packages/editor/",
            "tools/prefab_editor/"
        ]
    }
}