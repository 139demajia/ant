{
    "completion": {
        "autoRequire": false
    },
    "diagnostics": {
        "disable": [
            "different-requires",
            "need-check-nil"
        ],
        "globals": [
            "import_feature",
            "import",
            "pipeline",
            "policy",
            "component",
            "feature",
            "system"
        ]
    },
    "runtime": {
        "special": {
            "import_package": "require"
        }
    },
    "workspace": {
        "checkThirdParty": false,
        "ignoreDir": [
            "3rd",
            "clibs",
            "pkg/ant.debugger",
            "pkg/ant.json",
            "pkg/ant.ecs/src"
        ],
        "maxPreload": 100000
    }
}