type = "texture"

colorspace = "sRGB" -- linear/HDR
mipmap = 0  -- 0 mean full mipmap, any number large than 0, mean skip to this mipmap number
-- normalmap = true

-- if texture size large than maxsize, it will keep the ratio and scale the texture, eg:
-- texture size is 1024x2048, than scale to : 512x1024
maxsize = "1024x1024"

compress = {
    window = "BC5",
    ios = "ASTC4x4",
    android = "ASTC4x4",
}

-- if compress defined, then format field will be ignore
-- format = "RGBA"