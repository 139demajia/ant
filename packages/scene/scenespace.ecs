import "@ant.objcontroller"
import "@ant.math"
import "@ant.general"

system "scenespace_system"
    .implement "scenespace.lua"
    .require_interface "ant.objcontroller|obj_motion"
    .require_interface "ant.objcontroller|camera_motion"
    .method "update_hierarchy_scene"
    .method "update_transform"

policy "hierarchy_policy"
    .require_system "scenespace_system"
    .require_component "parent"
    .require_component "scene_entity"

policy "transform_policy"
    .require_transform "transform_transform"
    .require_component "transform"

transform "transform_transform"
    .implement "scenespace.lua"
    .output "transform"
    .method "process"

component "lock_target"
    .implement "scenespace.lua"
    .require_component "vector"

component "parent"
    .implement "scenespace.lua"
    .require_component "entityid"

component "scene_entity"
    .implement "scenespace.lua"

component "transform"
    .implement "scenespace.lua"
    .require_component "srt"
    .require_component "lock_target"
    .method "init"

pipeline "scene"
    .stage "update_hierarchy_scene"
    .stage "update_transform"