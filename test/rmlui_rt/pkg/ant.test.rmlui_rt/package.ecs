import "@ant.rmlui"
import "@ant.render"
import "@ant.animation"
import "@ant.sky"
system "init_system"
    .implement "init_system.lua"
    .require_system "ant.rmlui|rmlui_system"
    .require_interface "ant.render|irenderqueue"
    .require_policy "ant.render|ibl"
    .require_policy "ant.render|light"
    .require_policy "ant.sky|procedural_sky"
    .require_policy "ant.sky|skybox"
    .method "init"
    .method "post_init"
    .method "entity_init"
    .method "end_frame"

pipeline "init"
    .stage "init"
    .stage "post_init"

pipeline "exit"
    .stage "exit"

pipeline "update"
    .stage "timer"
    .stage "start_frame"
    .stage "data_changed"
    .stage  "widget"
    .pipeline "sky"
    .pipeline "scene"
    .pipeline "camera"
    .pipeline "collider"
    .pipeline "animation"
    .pipeline "render"
    .pipeline "select"
    .pipeline "ui"
    .stage "end_frame"
    .stage "final"

pipeline "ui"
    .stage "ui_start"
    .stage "ui_update"
    .stage "ui_end"
