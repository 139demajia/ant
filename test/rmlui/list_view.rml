<rml>
    <head>
        <style>
            .panel {
                background-color: rgba(120, 120, 120, 255);
                width: 100%;
                height: 100%;
                flex-direction: row;
            }
            .item-container {
                border: 2px green;
                flex-direction: column;
                justify-content: flex-start;
                width: 100%;
                height: 100px;
            }
            .item-display {
                border: 2px red;
                flex-direction: row;
                justify-content: flex-start;
                align-items:center;
                font-size:25px;
            }
            .item-bg {
                width:50px;
                height:50px;
                background-size:cover;
            }
            .row {
                flex-direction: row;
                justify-content: space-between;
                align-items:center;
            }
            .column {
                flex-direction: column;
                align-items:center;
            }
            .page {
                transition: left 0.5s linear-out; 
            }
            .list {
                flex-direction: column;
                align-items: center;
                justify-content: flex-start;
                transition: top 0.5s linear-out;
            }
            .notransition {
                transition: none;
            }
        </style>
        <script type="text/x-lua" >
            console.log("before createModel")
            local start = window.createModel "start" {
                items = {
                    {id=100, icon0="correct.png", icon1="correct.png"},
                    {id=101, icon0="correct.png", icon1="correct.png"},
                    {id=102, icon0="correct.png", icon1="correct.png"},
                    {id=103, icon0="correct.png", icon1="correct.png"},
                    {id=104, icon0="correct.png", icon1="correct.png"},
                    {id=105, icon0="correct.png", icon1="correct.png"},
                    {id=106, icon0="correct.png", icon1="correct.png"},
                    {id=107, icon0="correct.png", icon1="correct.png"},
                    {id=108, icon0="correct.png", icon1="correct.png"},
                    {id=109, icon0="correct.png", icon1="correct.png"},
                    {id=110, icon0="correct.png", icon1="correct.png"},
                    {id=111, icon0="correct.png", icon1="correct.png"},
                    {id=112, icon0="correct.png", icon1="correct.png"},
                    {id=113, icon0="correct.png", icon1="correct.png"},
                    {id=114, icon0="correct.png", icon1="correct.png"},
                    {id=115, icon0="correct.png", icon1="correct.png"},
                    {id=116, icon0="correct.png", icon1="correct.png"},
                    {id=117, icon0="correct.png", icon1="correct.png"},
                    {id=118, icon0="correct.png", icon1="correct.png"},
                    {id=119, icon0="correct.png", icon1="correct.png"},
                    {id=120, icon0="correct.png", icon1="correct.png"},
                    {id=121, icon0="correct.png", icon1="correct.png"},
                    {id=122, icon0="correct.png", icon1="correct.png"},
                    {id=123, icon0="correct.png", icon1="correct.png"},
                    {id=124, icon0="correct.png", icon1="correct.png"},
                },
                page_width = 667,
                page_height = 720,
                item_size = 200,
                show_detail = false,
                -- 详细信息面板高度
                detail_height = 120,
                -- 详细信息面板开始位置
                detail_top = 0,
                view_items = {},
                current_page = 0,
                selected_id = 0,
                --TODO: 当前选中行，从0开始，初始化一个很大的值
                selected_row = 10000,
                current_time = 0,
                item_list = {
                    {id=100, icon0="correct.png", icon1="correct.png"},
                    {id=101, icon0="correct.png", icon1="correct.png"},
                    {id=102, icon0="correct.png", icon1="correct.png"},
                    {id=103, icon0="correct.png", icon1="correct.png"},
                    {id=104, icon0="correct.png", icon1="correct.png"},
                    {id=105, icon0="correct.png", icon1="correct.png"},
                    {id=106, icon0="correct.png", icon1="correct.png"},
                    {id=107, icon0="correct.png", icon1="correct.png"},
                    {id=108, icon0="correct.png", icon1="correct.png"},
                    {id=109, icon0="correct.png", icon1="correct.png"},
                    {id=110, icon0="correct.png", icon1="correct.png"},
                    {id=111, icon0="correct.png", icon1="correct.png"},
                    {id=112, icon0="correct.png", icon1="correct.png"},
                    {id=113, icon0="correct.png", icon1="correct.png"},
                    {id=114, icon0="correct.png", icon1="correct.png"},
                    {id=115, icon0="correct.png", icon1="correct.png"},
                    {id=116, icon0="correct.png", icon1="correct.png"},
                    {id=117, icon0="correct.png", icon1="correct.png"},
                    {id=118, icon0="correct.png", icon1="correct.png"},
                    {id=119, icon0="correct.png", icon1="correct.png"},
                    {id=120, icon0="correct.png", icon1="correct.png"},
                    {id=121, icon0="correct.png", icon1="correct.png"},
                    {id=122, icon0="correct.png", icon1="correct.png"},
                },
                list_item_width = 667,
                list_item_height = 50,
                list_width = 667,
                list_height = 360,
            }
            start.list_virtual_height = #start.item_list * start.list_item_height;

            --是否应该显示Detail信息计时
            local function update_time()
                start.current_time = start.current_time + 1
            end
            window.setInterval(update_time, 1)

            function start.page_item_down()
                start.page:on_item_down()
            end

            function start.page_item_up(event, id, row, top)
                start.page:on_item_up(id, row, top)
            end

            window.addEventListener('message', function(event)
                console.log("event.source.postMessage")
                event.source.postMessage(event.data)
            end)
            window.addEventListener('mousemove', function(event)
            end)

            window.customElements.define("template", function(e)
                e.style.display = "none"
            end)

            local pageclass = require "page"
            window.customElements.define("page", function(e)
                start.page = pageclass.create(e, {
                    width = start.page_width,
                    height = start.page_height,
                    item_size = start.item_size,
                    source = start
                }, document.getElementById "pagefooter")
            end)

            local listclass = require "list"
            window.customElements.define("list", function(e)
                local list = listclass.create(e, {
                    direction = 1, -- 0:horizontal, 1:vertical
                    width = start.list_width,
                    height = start.list_height,
                    item_width = start.list_item_width,
                    item_height = start.list_item_height,
                    item_count = #start.item_list
                })
            end)
        </script>
    </head>
    <body>
        <template id="pagefooter">
            <div style='width:20px; height:20px; background-size:cover; background-image:"common/page0.png";'/>
        </template>
        <div class="panel" data-model="start">
            <page>
                <div class="page">
                    <!-- item 定义 -->
                    <div style="position: absolute; background-color: rgba(255, 120, 120, 255);" data-style-border="selected_id == it.data.id ? '2px green' : '0px green'" data-event-mousedown="page_item_down()" data-event-mouseup="page_item_up(it.data.id, it.row, it.top)" data-style-width="item_size+'px'" data-style-height="item_size+'px'" data-style-left="it.left+'px'" data-style-top="((it.row > selected_row) ? (it.top + detail_height) : it.top) + 'px'" data-for="view_items">
                        <div class="item-bg" data-style-background-image="it.data.icon0"/>
                        <div>{{it.data.id}}</div>
                    </div>
                    <!-- 详细信息 -->
                    <div style="position: absolute; width: 100%; background-color: rgba(0, 100, 150, 255);" data-style-left="current_page * page_width + 'px'" data-style-height="detail_height+'px'" data-style-top="detail_top+item_size+'px'" data-if="show_detail">
                        Item Detail
                    </div>
                </div>
                <!-- 页面指示 -->
                <div/>
            </page>
            <list>
                <div class="list">
                    <!-- item 定义 -->
                    <div class="item-display" style="width:100%;" data-style-height="list_item_height + 'px'" data-for="item_list">
                        <div class="item-bg" data-style-background-image="it.icon0"/>
                        <div>{{it.id}}</div>
                    </div>
                </div>
            </list>
        </div>
    </body>
</rml>