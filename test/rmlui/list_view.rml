                start.page:on_dirty_all(#start.items)
            end, 2000)
            --]]
            function start.page_item_click(event, id, row, top)
                start.page:on_item_click(id, row, top)
            end

            window.addEventListener('message', function(event)
                console.log("event.source.postMessage")
                event.source.postMessage(event.data)
            end)
            window.addEventListener('mousemove', function(event)
            end)

            window.customElements.define("template", function(e)
                e.style.display = "none"
            end)

            local function page_item_renderer(index)
                local item = document.createElement "div"
                item.style.width = '120px'
                item.style.height = '120px'
                if index > #start.items then
                    --item.outerHTML = [[<div style = "width: 120px; height: 120px;" />]]
                    return item
                end
                item.style.border = '2px blue'
                local c0 = document.createElement "div"
                c0.style.width = '50px'
                c0.style.height = '50px'
                c0.style.backgroundSize = 'cover'
                c0.style.backgroundImage = start.items[index].icon0
                item.appendChild(c0)
                local c1 = document.createElement "div"
                c1.innerHTML = tostring(start.items[index].id)
                item.appendChild(c1)
                item.addEventListener('click', function()
                    local last_selected = start.page:get_selected();
                    if last_selected then
                        last_selected.style.border = '2px blue'
                        start.page:show_detail(last_selected, false)
                    end
                    item.style.border = '2px red'
                    start.page:show_detail(item, true)
                    start.page:set_selected(item)
                end)
                return item
            end
            
            local function page_item_detail_renderer(index)
                local detail = document.createElement "div"
                detail.style.width = '100%'
                detail.style.height = '100px'
                detail.style.border = '2px blue'
                return detail
            end

            local pageclass = require "page"
            window.customElements.define("page", function(e)
                start.page = pageclass.create(document, e, page_item_renderer, page_item_detail_renderer)
                start.page:on_dirty_all(#start.items)
            end)
            
            start.testclick = function(event)
                local item = event.target
                if start.list.selected then
                    start.list.selected.style.border = '2px blue'
                    start.list:show_detail(start.list.selected, false)
                end
                if start.list.selected ~= item then
                    item.style.border = '2px red'
                    start.list:show_detail(item, true)
                    start.list.selected = item
                end
            end

            local function list_item_renderer(parent)
                local item = document.createElement "div"
                item.style.width = '100%'
                item.outerHTML = ([[
                    <div style="width:100%; height:100px; border:2px blue; background-color:rgb(100,150,100); flex-direction: row; align-items: center; justify-content:space-evenly;" data-for="items" data-event-click="testclick()">
                        <div>{{it.id}}</div>
                        <div style="width:50px; height:50px;background-size:cover;" data-style-background-image="it.icon0"/>
                    </div>
                ]])
                parent.appendChild(item)
                --[[
                item.style.width = '400px'
                item.style.height = '100px'
                item.style.border = '2px blue'
                item.style.flexDirection = 'row'
                item.style.alignItems = 'center'
                item.style.justifyContent = 'space-evenly'
                item.style.backgroundColor = 'rgb(100,150,100)'
