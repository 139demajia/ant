<rml>
    <head>
        <style>
            .panel {
                width: 87%;
                height: 100%;
                pointer-events: none;
            }
            .item-container {
                border: 2px green;
                flex-direction: column;
                justify-content: flex-start;
                width: 100%;
                height: 100px;
            }
            .item-display {
                border: 2px red;
                flex-direction: row;
                justify-content: flex-start;
                align-items:center;
                font-size:25px;
            }
            .item-bg {
                width:50px;
                height:50px;
                background-size:cover;
            }
            .row {
                flex-direction: row;
                justify-content: space-between;
                align-items:center;
            }
            .column {
                flex-direction: column;
                align-items:center;
            }
            button {
                width: 28.00vmin;
                height: 28.00vmin;
                text-align: center;
                border-radius: 2.00vmin;
                border: 0.53vmin white;
                font-size: 4.00vmin;
                transition: transform 2s elastic-out;
                transform: scale(1.0);
                /* box-shadow: inset 2px 2px 3px rgba(255, 255, 255, .6), inset -2px -2px 3px rgba(0, 0, 0, .6); */
            }
            button:active {
                transform: scale(1.3);
                /* box-shadow: inset -2px -2px 3px rgba(255, 255, 255, .6), inset 2px 2px 3px rgba(0, 0, 0, .6); */
            }
            button#work {
                position: absolute;
                top: 82.67vmin;
                left: 158.67vmin;
                width: 16.00vmin;
                height: 16.00vmin;
                margin: 0.00vmin;
                font-size: 150%;
            }
            .main-menu-block {
                /* width: 78vmin; */
                width: 58vmin;
                height: 20.00vmin;
                flex-direction: row;
                align-items: center;
                justify-content: flex-start;
                position: absolute; 
                left:0vmin; 
                bottom:0vmin;
                /* bottom: -100vmin; */
                border: 0.13vmin #fff;
                z-index: 999;
                background-color: rgba(200,200,200,80);
                border-radius: 1.33vmin;
            }
            .main-menu-button {
                margin : 0 0.5em;
                width: 15.33vmin;
                height: 15.33vmin;
                flex-direction: column;
                align-items: center;
                justify-content: center;
            }
            .menu-button-pic {
                background-size: cover;
                width: 12.67vmin;
                height: 12.67vmin;
            }
            .menu-button-text {
                font-size: 4.5vmin;
                text-align: center;
                -webkit-text-stroke: 0.07vmin rgb(19,175,240);
                color:rgb(255,255,255);;
            }
        </style>
        <style path = "listpage_style.rcss"/>
        <script type="text/x-lua" >
            local start = window.createModel "start" {
            }
            local count = 0
            function start.clickConstructBegin(event)
                count = count + 1
                console.log("----clickConstructBegin----", count)
            end
            function start.clickHeadquater(event)
                count = count + 1
                console.log("----clickHeadquater----", count)
            end
            function start.clickTechnology(event)
                count = count + 1
                console.log("----clickTechnology----", count)
            end
            function start.clickSetting(event)
                count = count + 1
                console.log("----clickSetting----", count)
            end
        </script>
    </head>
    <body style = "pointer-events: none; justify-content: center; align-items: center;">
        <div class="panel" data-model="start">
            <div class = "main-menu-block">
                <button  class = "main-menu-button" style="border: 0.00vmin;" data-event-click = "clickHeadquater()">
                    <div class = "menu-button-pic" style='background-image:"logistics_center.png"'/>
                    <div class = "menu-button-text">指挥中心</div>
                </button>
                <button  class = "main-menu-button" style="border: 0.00vmin;" data-event-click = "clickTechnology()">
                    <div class = "menu-button-pic" style='background-image:"goods_station.png"'/>
                    <div class = "menu-button-text">科研中心</div>
                    <div class = "menu-button-pic" style='width:3.6vmin; height:3.6vmin; position:absolute; right:0; top:0; background-image:"shutdown.png"'>
                        <div style="text-align:center; font-size:3vmin; padding-right: 0.5vmin;">0</div>
                    </div>
                </button>
                <button  class = "main-menu-button" style="border: 0.00vmin;" data-event-click="clickSetting()">
                    <div class = "menu-button-pic" style='background-image:"wheel.png"'/>
                    <div class = "menu-button-text">游戏设置</div>
                </button>
            </div>
            <div style = "pointer-events: none; position: absolute; bottom:0vmin; right:0vmin; width: 97vmax; height: 98.5vmin; flex-direction: row-reverse; align-items: flex-end;">
                <button data-event-click="clickConstructBegin()" style='width: 20.00vmin; height: 20.00vmin; bottom: 2vmin; background-color: rgb(59,211,124); flex-direction: column; justify-content: flex-start;'>
                    <div style='margin: 0 auto; background-image:"work.png"; width: 13.67vmin; height: 13.67vmin; background-size:cover;'/>
                    <div style="font-size: 5vmin;">建造</div>
                </button>
            </div>
        </div>
    </body>
</rml>
