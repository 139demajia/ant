    <body>
        <div class="panel" data-model="start">
            <page width='667' height='720' row='3' col='3'>
                <div class="pagestyle"/>
            </page>
            <list direction='1' width='667' height='720' item_width='667' item_height='50'>
                <div class="liststyle">
                </div>
            </list>
        </div>
