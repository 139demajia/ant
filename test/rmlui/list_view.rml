            function start.page_item_click(event, id, row, top)
                start.page:on_item_click(id, row, top)
            end

            window.addEventListener('message', function(event)
                console.log("event.source.postMessage")
                event.source.postMessage(event.data)
            end)
            window.addEventListener('mousemove', function(event)
            end)

            window.customElements.define("template", function(e)
                e.style.display = "none"
            end)

            local function page_item_renderer(index)
                local item = document.createElement "div"
                item.style.width = '120px'
                item.style.height = '120px'
                item.style.border = '2px blue'
                if index > #start.items then
                    return document.createElement "div"
                end
                local c0 = document.createElement "div"
                c0.style.width = '50px'
                c0.style.height = '50px'
                c0.style.backgroundSize = 'cover'
                c0.style.backgroundImage = start.items[index].icon0
                item.appendChild(c0)
                local c1 = document.createElement "div"
                c1.innerHTML = tostring(start.items[index].id)
                item.appendChild(c1)
                item.addEventListener('click', function()
                    if start.page.selected then
                        start.page.selected.style.border = '2px blue'
                    end
                    item.style.border = '2px red'
                    start.page.selected = item
                end)
                return item
            end
            
            local function page_item_detail_renderer(e)
                local detail = document.createElement "div"
                detail.style.width = '120px'
                detail.style.height = '200px'
                detail.style.border = '2px blue'
                return item
            end

            local pageclass = require "page"
            window.customElements.define("page", function(e)
                start.page = pageclass.create(document, e, #start.items, page_item_renderer, page_item_detail_renderer)
            end)

            local function list_item_renderer(index)
                local item = document.createElement "div"
                item.style.width = '100%'
                item.style.height = '50px'
                item.style.border = '2px blue'
                item.style.flexDirection = 'row'
                item.style.alignItems = 'center'
                item.style.justifyContent = 'space-evenly'
                if index > #start.items then
                    return document.createElement "div"
                end
                local c1 = document.createElement "div"
                c1.innerHTML = tostring(start.items[index].id)
                item.appendChild(c1)

                local c0 = document.createElement "div"
                c0.style.width = '50px'
                c0.style.height = '50px'
                c0.style.backgroundSize = 'cover'
                c0.style.backgroundImage = start.items[index].icon0
                item.appendChild(c0)
                item.addEventListener('click', function()
                    if start.list.selected then
                        start.list.selected.style.border = '2px blue'
                    end
                    item.style.border = '2px red'
                    start.list.selected = item
                end)
                return item
            end
            local listclass = require "list"
            window.customElements.define("list", function(e)
                start.list = listclass.create(document, e, #start.items, list_item_renderer)
            end)
        </script>
