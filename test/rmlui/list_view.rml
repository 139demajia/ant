<rml>
    <head>
        <style>
            .panel {
                background-color: rgba(120, 120, 120, 255);
                width: 100%;
                height: 100%;
                flex-direction: row;
            }
            .item-container {
                border: 2px green;
                flex-direction: column;
                justify-content: flex-start;
                width: 100%;
                height: 100px;
            }
            .item-display {
                border: 2px red;
                flex-direction: row;
                justify-content: flex-start;
                align-items:center;
                font-size:25px;
            }
            .item-bg {
                width:50px;
                height:50px;
                background-size:cover;
            }
            .row {
                flex-direction: row;
                justify-content: space-between;
                align-items:center;
            }
            .column {
                flex-direction: column;
                align-items:center;
            }
            .notransition {
                transition: none;
            }
        </style>
        <style path = "listpage_style.rcss"/>
        <script type="text/x-lua" >
            console.log("before createModel")
            local start = window.createModel "start" {
                page_0 = {
                    items = {
                        {id=100, icon0="correct.png", icon1="correct.png"},
                        {id=101, icon0="correct.png", icon1="correct.png"},
                        {id=102, icon0="correct.png", icon1="correct.png"},
                        {id=103, icon0="correct.png", icon1="correct.png"},
                        {id=104, icon0="correct.png", icon1="correct.png"},
                        {id=105, icon0="correct.png", icon1="correct.png"},
                        {id=106, icon0="correct.png", icon1="correct.png"},
                        {id=107, icon0="correct.png", icon1="correct.png"},
                        {id=108, icon0="correct.png", icon1="correct.png"},
                        {id=109, icon0="correct.png", icon1="correct.png"},
                        {id=110, icon0="correct.png", icon1="correct.png"},
                        {id=111, icon0="correct.png", icon1="correct.png"},
                        {id=112, icon0="correct.png", icon1="correct.png"},
                        {id=113, icon0="correct.png", icon1="correct.png"},
                        {id=114, icon0="correct.png", icon1="correct.png"},
                        {id=115, icon0="correct.png", icon1="correct.png"},
                        {id=116, icon0="correct.png", icon1="correct.png"},
                        {id=117, icon0="correct.png", icon1="correct.png"},
                        {id=118, icon0="correct.png", icon1="correct.png"},
                        {id=119, icon0="correct.png", icon1="correct.png"},
                        {id=120, icon0="correct.png", icon1="correct.png"},
                        {id=121, icon0="correct.png", icon1="correct.png"},
                        {id=122, icon0="correct.png", icon1="correct.png"},
                        {id=123, icon0="correct.png", icon1="correct.png"},
                        {id=124, icon0="correct.png", icon1="correct.png"},
                    },
                    unit = 'px',
                    selected_id = 0,
                    view_items = {},
                    show_detail = false,
                    -- 详细信息面板高度
                    detail_height = 120,
                },
                page_width = 667,
                page_height = 720,
                item_size = 200,
                list_0 = {
                    items = {
                        {id=100, icon0="correct.png", icon1="correct.png"},
                        {id=101, icon0="correct.png", icon1="correct.png"},
                        {id=102, icon0="correct.png", icon1="correct.png"},
                        {id=103, icon0="correct.png", icon1="correct.png"},
                        {id=104, icon0="correct.png", icon1="correct.png"},
                        {id=105, icon0="correct.png", icon1="correct.png"},
                        {id=106, icon0="correct.png", icon1="correct.png"},
                        {id=107, icon0="correct.png", icon1="correct.png"},
                        {id=108, icon0="correct.png", icon1="correct.png"},
                        {id=109, icon0="correct.png", icon1="correct.png"},
                        {id=110, icon0="correct.png", icon1="correct.png"},
                        {id=111, icon0="correct.png", icon1="correct.png"},
                        {id=112, icon0="correct.png", icon1="correct.png"},
                        {id=113, icon0="correct.png", icon1="correct.png"},
                        {id=114, icon0="correct.png", icon1="correct.png"},
                        {id=115, icon0="correct.png", icon1="correct.png"},
                        {id=116, icon0="correct.png", icon1="correct.png"},
                        {id=117, icon0="correct.png", icon1="correct.png"},
                        {id=118, icon0="correct.png", icon1="correct.png"},
                        {id=119, icon0="correct.png", icon1="correct.png"},
                        {id=120, icon0="correct.png", icon1="correct.png"},
                        {id=121, icon0="correct.png", icon1="correct.png"},
                        {id=122, icon0="correct.png", icon1="correct.png"},
                    },
                    unit = 'px',
                },
                list_item_width = 667,
                list_item_height = 50,
                list_width = 667,
                list_height = 360,
            }

            function start.page_item_down()
                start.page:on_item_down()
            end

            function start.page_item_up(event, id, row, top)
                start.page:on_item_up(id, row, top)
            end

            window.addEventListener('message', function(event)
                console.log("event.source.postMessage")
                event.source.postMessage(event.data)
            end)
            window.addEventListener('mousemove', function(event)
            end)

            window.customElements.define("template", function(e)
                e.style.display = "none"
            end)

            local pageclass = require "page"
            window.customElements.define("page", function(e)
                local page = pageclass.create(e, start.page_0, document.getElementById "pagefooter", function () start("page_0") end)
                window.setInterval(function () page:update_time() end, 1)
                start.page = page
            end)

            local listclass = require "list"
            window.customElements.define("list", function(e)
                local list = listclass.create(e, start.list_0)
                list:set_item_count(#start.list_0.items)
            end)
        </script>
    </head>
    <body>
        <template id="pagefooter">
            <div style='width:20px; height:20px; background-size:cover; background-image:"common/page0.png";'/>
        </template>
        <div class="panel" data-model="start">
            <page width='667' height='720' item_size='200' detail_height='120'>
                <div class="pagestyle">
                    <!-- item 定义 -->
                    <div style="position: absolute; background-color: rgba(255, 120, 120, 255);" data-style-border="page_0.selected_id == it.data.id ? '2px green' : '0px green'" data-event-mousedown="page_item_down()" data-event-mouseup="page_item_up(it.data.id, it.row, it.top)" data-style-width="item_size+'px'" data-style-height="item_size+'px'" data-style-left="it.left+'px'" data-style-top="it.top+'px'" data-for="page_0.view_items">
                        <div class="item-bg" data-style-background-image="it.data.icon0"/>
                        <div>{{it.data.id}}</div>
                    </div>
                    <!-- 详细信息 -->
                    <div id="detail" style="position: absolute; width: 100%; background-color: rgba(0, 100, 150, 255);" data-style-height="page_0.detail_height+'px'" data-if="page_0.show_detail">
                        Item Detail
                    </div>
                </div>
                <!-- 页面指示 -->
                <div/>
            </page>
            <div style='flex-direction: column; width:50%; height:100%;'>
                <list direction='1' width='667' height='360' item_width='667' item_height='50'>
                    <div class="liststyle">
                        <!-- item 定义 -->
                        <div class="item-display" style="width:100%;" data-style-height="list_item_height + 'px'" data-for="list_0.items">
                            <div class="item-bg" data-style-background-image="it.icon0"/>
                            <div>{{it.id}}</div>
                        </div>
                    </div>
                </list>
                <list direction='1' width='667' height='360' item_width='667' item_height='50' style='background-color: rgba(100, 200, 100, 255);'>
                    <div class="liststyle">
                        <!-- item 定义 -->
                        <div class="item-display" style="width:100%;" data-style-height="list_item_height + 'px'" data-for="list_0.items">
                            <div class="item-bg" data-style-background-image="it.icon0"/>
                            <div>{{it.id}}</div>
                        </div>
                    </div>
                </list>
            </div>
        </div>
    </body>
</rml>