<rml>
    <head>
        <style>
            body {
                font: 300% "宋体";
            }
            div {
                margin-left: 60%;
                margin-right: 10%;
                margin-top: 10%;
                margin-bottom: 20%;
            }
            button {
                margin: 10px;
                padding: 0 20px;
                text-align: center;
                text-decoration: none;
                border-radius: 10px;
                border: 1px black;
                opacity: 0.5;
                
                transition: color background-color transform 2s elastic-out;
                background-color: #f22222;
                color: #ffffff;
                transform: scale(1.0);
                
            }
            button:hover {
                transform: scale(1.2);
                background-color: #222222;
                color: #f5d057;
            }
            button>span {
                opacity: 1;
            }
            .notransition {
                transition: none;
            }
        </style>
        <script type="text/x-lua" >
            local start = window.createModel "start" {
                show = false,
                richtext = true,
                label = "测试1"
            }
            function start.new(event)
                console.log(event.target.id)
                window.open("script.rml")
            end
            function start.load(event)
                local e = event.target
                local oldClassName = e.className
                e.className = e.className .. " notransition"
                e.style.backgroundColor = "green"
                e.className = oldClassName
            end
            function start.setting(event)
                start.show = not start.show
                local e = event.target
                local btn = document.createElement "button"
                local label = document.createTextNode "Test Button"
                e.parentNode.appendChild(btn)
                btn.appendChild(label)
            end
            function start.exit()
            end
            window.addEventListener('message', function(event)
                event.source.postMessage(event.data)
            end)
            window.addEventListener('mousemove', function(event)
                if event.button then
                    console.log("darg", event.x, event.y)
                end
            end)
        </script>
    </head>
    <body>
        <div data-model="start">
            <richtext id = "new" data-event-click="new()">(irbtn_active)(irbtn_hover)(irbtn_normal)</richtext>
            <button data-event-click="load()">t1</button>

            <button data-event-click="setting()">t2</button>

            <button data-if="show">(irbtn_active)(irbtn_hover)(irbtn_normal)</button>
            <richtext data-event-click="exit()">(color_text_L){/r a1 }{/g a2}{/color:ff00ff a3}(color_text_R)(color_text_T) (color_text_B) (color_text_N) (color_text_F)</richtext>
        </div>
    </body>
</rml>