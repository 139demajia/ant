                },
                list_items = {
                        {id=100, icon0=image_path, icon1=image_path, show_detail = false},
                        {id=101, icon0=image_path, icon1=image_path, show_detail = false},
                        {id=102, icon0=image_path, icon1=image_path, show_detail = false},
                        {id=103, icon0=image_path, icon1=image_path, show_detail = false},
                        {id=104, icon0=image_path, icon1=image_path, show_detail = false},
