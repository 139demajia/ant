                        {id=113, icon0=image_path, icon1=image_path, show_detail = false},
                        {id=114, icon0=image_path, icon1=image_path, show_detail = false},
                },
                page = {},
                list = {}
            }

            function start.page_item_click(event, id, row, top)
                start.page:on_item_click(id, row, top)
            end

            window.addEventListener('message', function(event)
                console.log("event.source.postMessage")
                event.source.postMessage(event.data)
            end)
            window.addEventListener('mousemove', function(event)
            end)

            window.customElements.define("template", function(e)
                e.style.display = "none"
            end)
            start.click_page_item = function(event)
                console.log("click page item")
                local item = event.target
                local last_selected = start.page.last_selected
                if last_selected then
                    last_selected.style.border = '2px blue'
                end
                item.style.border = '2px red'
                start.page.last_selected = item
            end
            local function page_item_update(item, index)
                if index > #start.page_items then
                    --item.outerHTML = [[<div style = "width: 120px; height: 120px;" />]]
                    return item
                end
                item.outerHTML = ([[
                    <div style='width:50px; height:50px; background-size: cover; background-image:"%s";'>
                    </div>
                    <div>
                        %d
                    </div>
                ]]):format(start.page_items[index].icon0, start.page_items[index].id)
                item.addEventListener('click', function()
                    local last_selected = start.page:get_selected();
                    if last_selected then
                        last_selected.style.border = '2px blue'
                        start.page:show_detail(last_selected, false)
                        start.page:on_dirty(index)
                    end
                    item.style.border = '2px red'
                    start.page:show_detail(item, true)
                    start.page:set_selected(item)
                end)
            end

            local function page_item_init(item, index)
                item.style.width = '120px'
                item.style.height = '120px'
                item.style.border = '2px blue'
                --item.outerHTML = ([[
                --    <div style="width:667px; height:100%; border:2px red; flex-direction: row; align-items: center; justify-content:space-evenly;" data-for="page_items">
                --        <div style="flex-direction: row; align-items: center; justify-content:space-evenly; flex-wrap:wrap;">
                --            <div style="margin:25px; width:120px; height:120px; border:2px blue; background-color:rgb(100,150,100);" data-for = "it_page : it.page" data-event-click="click_page_item()">
                --                <div style="width:50px; height:50px; background-size: cover;" data-style-background-image="it_page.icon0"></div>
                --                <div>{{it_page.id}}</div>
                --            </div>
                --            <div data-if="">
                --            </div>
                --        </div>
                --    </div>
                --]])
                page_item_update(item, index)
            end

            local function page_item_detail_init(index)
                local detail = document.createElement "div"
                detail.style.width = '100%'
                detail.style.height = '100px'
                detail.style.border = '2px blue'
                return detail
            end

            local pageclass = require "page"
            window.customElements.define("page", function(e)
                start.page = pageclass.create(document, e, page_item_init, page_item_update, page_item_detail_init)
                start.page:on_dirty_all(#start.page_items)
            end)
            
            start.click_list_item = function(event, index)
                console.log("click list item ", index)
                local item = event.target
                if start.list.selected_index then
                    if start.list.selected_index ~= index then
                        start.list_items[start.list.selected_index].show_detail = false
                    else
                        local show = start.list_items[start.list.selected_index].show_detail
                        start.list_items[start.list.selected_index].show_detail = not show
                    end
                else
                    start.list.selected_index = index + 1
                    start.list_items[start.list.selected_index].show_detail = true
                end
                if start.list.selected then
                    start.list.selected.style.border = '2px blue'
                end
                if start.list.selected ~= item then
                    item.style.border = '2px red'
                    start.list.selected = item
                end
            end
            local function list_item_update(item, index)
            end
            local function list_item_init(item, index)
                local item = document.createElement "div"
                item.outerHTML = ([[
                    <div style="width:100%; height:100px; border:2px blue; background-color:rgb(100,150,100); flex-direction: row; align-items: center; justify-content:space-evenly;" data-for="list_items" data-event-click="click_list_item(it_index)">
                        <div>{{it.id}}</div>
                        <div style="width:50px; height:50px;background-size:cover;" data-style-background-image="it.icon0"/>
                        <div style="width:100%; height:100px; border:2px yellow;" data-if="it.show_detail">Detail</div>
                    </div>
                ]])
                return item
            end
            local function list_item_detail_renderer(index)
                local detail = document.createElement "div"
                detail.style.width = '100%'
                detail.style.height = '100px'
                detail.style.border = '2px yellow'
                detail.innerHTML = "Detail"
                return detail
            end
            local listclass = require "list"
            window.customElements.define("list", function(e)
                start.list = listclass.create(document, e, list_item_init, list_item_update, list_item_detail_renderer, true)
            end)
        </script>
