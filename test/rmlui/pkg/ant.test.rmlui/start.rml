<rml>
    <head>
        <style>
            body {
                font: 300% "宋体";
                background-color: gray;
            }
            div {
                margin-left: 60%;
                margin-right: 10%;
                margin-top: 10%;
                margin-bottom: 20%;
                gap: 20px;
            }
            button {
                padding: 0 20px;
                text-align: center;
                text-decoration: none;
                border-radius: 10px;
                border: 1px white;
                background-color: black;
                background-size: contain;
                color: white;
                transform: scale(1.0);
            }
            button:active {
                transform: scale(1.1);
            }
        </style>
        <script type="text/x-lua" >
            local start = window.createModel {
                show = false,
                label = "新游戏"
            }
            function start.new(event)
                window.callMessage("click", "new")
            end
            function start.load(event)
                window.callMessage("click", "load")
            end
            function start.setting(event)
                window.callMessage("click", "setting")
                start.show = not start.show
            end
            function start.exit()
                window.callMessage("click", "exit")
            end
        </script>
    </head>
    <body>
        <div id="test">
            <button id = "new" data-event-click="new()">{{label}}</button>
            <button data-event-click="load()">载入游戏</button>
            <button data-event-click="setting()">设置</button>
            <button data-if="show">隐藏菜单</button>
            <button data-event-click="exit()">退出</button>
        </div>
    </body>
</rml>