<rml>
    <head>
        <style>
            body {
                font: 300% "宋体";
            }
            div {
                margin-left: 60%;
                margin-right: 10%;
                margin-top: 10%;
                margin-bottom: 20%;
            }
            button {
                margin: 10px;
                padding: 0 20px;
                text-align: center;
                text-decoration: none;
                border-radius: 10px;
                border: 1px black;
                opacity: 0.5;
                
                transition: color background-color transform 2s elastic-out;
                background-color: #f22222;
                color: #ffffff;
                transform: scale(1.0);
                
            }
            button:hover {
                transform: scale(1.2);
                background-color: #222222;
                color: #f5d057;
            }
            button>span {
                opacity: 1;
            }
            .notransition {
                transition: none;
            }
        </style>
        <script type="text/x-lua" >
            local start = window.createModel "start" {
                show = false,
                richtext = false,
                label = "游戏测试 [#ff00ff]CD EF[#] 换行"
                --"游戏测试 [#abcdef]此处 应该[#] 换行"
                --"游戏测试 [#abcdef]CD EF[#] 换行"
                --"AB [#abcdef]CD EF[#] G"
                --"游戏测试 [#abcdef]此处 应该[#] 换行"
            }
            function start.new(event)
                console.log(event.target.id)
                window.open("script.rml")
            end
            function start.load(event)
                local e = event.target
                local oldClassName = e.className
                e.className = e.className .. " notransition"
                e.style.backgroundColor = "green"
                e.className = oldClassName
            end
            function start.setting(event)
                start.show = not start.show
                local e = event.target
                local btn = document.createElement "button"
                local label = document.createTextNode "Test Button"
                e.parentNode.appendChild(btn)
                btn.appendChild(label)
            end
            function start.exit()
            end
            window.addEventListener('message', function(event)
                event.source.postMessage(event.data)
            end)
            window.addEventListener('mousemove', function(event)
                if event.button then
                    console.log("darg", event.x, event.y)
                end
            end)
        </script>
    </head>
    <body>
        <div data-model="start">
            <button id = "new" data-event-click="new()">{{label}}</button>
            <button data-event-click="load()">[#0000ff]D[#]</button>
            <button data-event-click="setting()">[#0000ff]E[#]</button>
            <button data-if="show">[#0000ff]F[#]</button>
            <button data-event-click="exit()">[#0000ff]G[#]</button>
        </div>
    </body>
</rml>