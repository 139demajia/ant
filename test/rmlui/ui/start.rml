<rml>
    <head>
        <style>
            div {
                font: 300% "宋体";
                margin-left: 60%;
                margin-right: 10%;
                margin-top: 10%;
                margin-bottom: 50%;
            }
            button {
                margin: 10px;
                padding: 0 20px;
                text-align: center;
                text-decoration: none;
                border-radius: 15px;
                border-radius: 10px;
                border: 1px black;
                opacity: 0.5;
                
                transition: color background-color transform 2s elastic-out;
                background-color: #f22222;
                color: #ffffff;
                transform: scale(1.0);
            }
            button:hover {
                transform: scale(1.2);
                background-color: #222222;
                color: #f5d057;
            }
            button>span {
                opacity: 1;
            }
        </style>
        <script type="text/x-lua" >
            local start = window.createModel "start" {
                show = false,
            }
            function start.new(event)
                console.log(event.target.id)
                window.open("script.rml")
            end
            function start.load()
            end
            function start.setting()
                start.show = not start.show
            end
            function start.exit()
            end
            window.addEventListener('message', function(event)
                event.source.postMessage(event.data)
            end)
            window.addEventListener('mousemove', function(event)
                if event.button then
                    console.log("darg", event.x, event.y)
                end
            end)
        </script>
    </head>
    <body>
        <div id="test" data-model="start">
            <button id = "new" data-event-click="new()">新游戏</button>
            <button data-event-click="load()">载入游戏</button>
            <button data-event-click="setting()">设置</button>
            <button data-if="show">隐藏菜单</button>
            <button data-event-click="exit()">退出</button>
        </div>
    </body>
</rml>