<rml>
    <head>
        <style>
            .panel {
                background-color: rgba(120, 120, 120, 255);
                width: 100%;
                height: 100%;
                flex-direction: row;
            }
            .item-container {
                border: 2px green;
                flex-direction: column;
                justify-content: flex-start;
                width: 100%;
                height: 100px;
            }
            .item-display {
                border: 2px red;
                flex-direction: row;
                justify-content: flex-start;
                align-items:center;
                font-size:25px;
            }
            .item-bg {
                width:50px;
                height:50px;
                background-size:cover;
            }
            .row {
                flex-direction: row;
                justify-content: space-between;
                align-items:center;
            }
            .column {
                flex-direction: column;
                align-items:center;
            }
        </style>
        <script type="text/x-lua" >
            console.log("before createModel")
            local start = window.createModel "start" {
                item_page = {
                    {
                        {id=100, icon0="correct.png", icon1="correct.png"},
                        {id=101, icon0="correct.png", icon1="correct.png"},
                        {id=102, icon0="correct.png", icon1="correct.png"},
                    },
                    {
                        {id=103, icon0="correct.png", icon1="correct.png"},
                        {id=104, icon0="correct.png", icon1="correct.png"},
                        {id=105, icon0="correct.png", icon1="correct.png"},
                    },
                    {
                        {id=106, icon0="correct.png", icon1="correct.png"},
                        {id=107, icon0="correct.png", icon1="correct.png"},
                        {id=108, icon0="correct.png", icon1="correct.png"},
                    },
                    {
                        {id=109, icon0="correct.png", icon1="correct.png"},
                        {id=110, icon0="correct.png", icon1="correct.png"},
                        {id=111, icon0="correct.png", icon1="correct.png"},
                    }
                },
                current_page = 0,
                item_list = {
                    {id=100, icon0="correct.png", icon1="correct.png"},
                    {id=101, icon0="correct.png", icon1="correct.png"},
                    {id=102, icon0="correct.png", icon1="correct.png"},
                    {id=103, icon0="correct.png", icon1="correct.png"},
                    {id=104, icon0="correct.png", icon1="correct.png"},
                    {id=105, icon0="correct.png", icon1="correct.png"},
                    {id=106, icon0="correct.png", icon1="correct.png"},
                    {id=107, icon0="correct.png", icon1="correct.png"},
                    {id=108, icon0="correct.png", icon1="correct.png"},
                    {id=109, icon0="correct.png", icon1="correct.png"},
                    {id=110, icon0="correct.png", icon1="correct.png"},
                    {id=111, icon0="correct.png", icon1="correct.png"},
                    {id=112, icon0="correct.png", icon1="correct.png"},
                    {id=113, icon0="correct.png", icon1="correct.png"},
                    {id=114, icon0="correct.png", icon1="correct.png"},
                    {id=115, icon0="correct.png", icon1="correct.png"},
                    {id=116, icon0="correct.png", icon1="correct.png"},
                },
            }
            local listclass = require "list"
            local pageclass = require "page"
            -- window size : 1336 750
            local list_proxy = listclass.create(1, {667, 750}, #start.item_list, {750, 50})
            local page_proxy = pageclass.create({667, 750}, #start.item_page)
            
            function start.pagemousedown(event)
                page_proxy:on_mousedown(event)
            end
            
            function start.pagedrag(event)
                page_proxy:on_drag(event)
            end

            function start.pagemouseup(event)
                local page_change = page_proxy:on_mouseup(event)
                if page_change then
                    start("item_page")
                end
                start.current_page = page_proxy:get_current_page() - 1
            end

            function start.listmousedown(event)
                list_proxy:on_mousedown(event)
            end

            function start.listdrag(event)
                list_proxy:on_drag(event)
            end

            function start.listmouseup(event)
                list_proxy:on_mouseup(event)
            end

            window.addEventListener('message', function(event)
                console.log("event.source.postMessage")
                event.source.postMessage(event.data)
            end)
            window.addEventListener('mousemove', function(event)
            end)
        </script>
    </head>
    <body>
        <div class="panel" data-model="start">
            <div class="column" style="overflow: scroll; justify-content: flex-start; align-items: flex-start; width:50%; height: 100%;">
                <div style="width:100%; height:720px;">
                    <div style="transition: left 0.5s linear-out; width:100%; height:100%; flex-direction: row; justify-content: flex-start;" data-event-mousedown="pagemousedown()" data-event-mouseup="pagemouseup()" data-event-mousemove="pagedrag()">
                        <div class="item-container" style="width:100%; height:100%;" data-for="item_page">
                            <div class="item-display">
                                <div class="item-bg" data-style-background-image="it[0].icon0"/>
                                <div>{{it[0].id}}</div>
                            </div>
                            <div class="item-display">
                                <div class="item-bg" data-style-background-image="it[1].icon0"/>
                                <div>{{it[1].id}}</div>
                            </div>
                            <div class="item-display">
                                <div class="item-bg" data-style-background-image="it[2].icon0"/>
                                <div>{{it[2].id}}</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div style='flex-direction: row; justify-content: center; width:100%; height:30px;'>
                    <div data-for="item_page">
                        <div style="width:20px; height:20px; background-size:cover;" data-style-background-image="it_index == current_page ? 'common/page1.png' : 'common/page0.png'"/>
                    </div>
                </div>
            </div>
            <div class="column" style="transition: top 0.5s linear-out; justify-content: flex-start; width:50%; height: 100%;" data-event-mousedown="listmousedown()" data-event-mouseup="listmouseup()" data-event-mousemove="listdrag()">
                <div class="item-display" style="width:100%; height: 50px;" data-for="item_list">
                    <div class="item-bg" data-style-background-image="it.icon0"/>
                    <div>{{it.id}}</div>
                </div>
            </div>
        </div>
    </body>
</rml>