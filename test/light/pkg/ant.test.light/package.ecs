import "@ant.render"
import "@ant.camera"
import "@ant.asset"
import "@ant.terrain"

system "init_system"
    .implement "init_system.lua"
    .require_system "ant.camera|default_camera_controller"
    .require_system "ant.render|pack_scene_aabb_system"
    .require_policy "ant.render|light"
    .require_policy "ant.scene|scene_object"
    .require_policy "ant.render|render"
    .require_policy "ant.render|render_queue"
    .require_policy "ant.render|ibl"
    .require_policy "ant.render|csm_queue"

pipeline "init"
    .stage "init"
    .stage "post_init"

pipeline "exit"
    .stage "exit"

pipeline "update"
    .stage "timer"
    .stage "start_frame"
    .stage "data_changed"
    .stage  "widget"
    .pipeline "sky"
    .pipeline "animation"
    .pipeline "scene"
    .pipeline "camera"
    .pipeline "render"
    .stage "end_frame"
    .stage "final"
