import "@ant.general"
import "@ant.render"
import "@ant.sky"
import "@ant.camera"
import "@ant.asset"
import "@ant.prefab"

system "init_system"
    .implement "init_system.lua"
    .require_system "ant.camera|default_camera_controller"
    .require_system "ant.prefab|prefab_system"
    .require_policy "ant.general|name"
    .require_policy "ant.general|tag"
    .require_policy "ant.render|render"
    .require_policy "ant.render|light"
    .require_policy "ant.render|shadow_cast_policy"
    .require_policy "ant.sky|skybox"
    .method "init"
    .method "data_changed"

pipeline "init"
    .stage "init"
    .stage "post_init"

pipeline "exit"
    .stage "exit"

pipeline "update"
    .stage "timer"
    .stage "start_frame"
    .stage "data_changed"
    .stage  "widget"
    .pipeline "sky"
    .pipeline "scene"
    .pipeline "camera"
    .pipeline "render"
    .stage "end_frame"
    .stage "final"
