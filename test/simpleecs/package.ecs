pipeline "init"
    .stage "init"
    .stage "post_init"

pipeline "exit"
    .stage "exit"

pipeline "update"
    .stage "data_changed"
    .stage "simpleecs"
    .stage "update"

system "init_system"
    .implement "simpleecs.lua"
    .method "init"
    .method "data_changed"
