import "@ant.general"
import "@ant.render"
import "@ant.sky"
import "@ant.camera"
import "@ant.asset"
import "@ant.animation"

policy "simplerender2"
    .require_policy "ant.render|render_object"
    .require_policy "ant.scene|scene_object"
    .require_system "ant.render|render_system"
    .require_system "ant.render|world_transform_system"
    .require_system "ant.asset|cmaterial_system"
    .require_interface "ant.scene|ifilter_state"
    .require_interface "ant.render|irender"
	.component "simplemesh"
	.component "cmaterial"
    .component "filter_state"

system "init_system"
    .implement "init_system.lua"
    .require_system "ant.camera|default_camera_controller"
    .require_policy "ant.render|light"
    .require_policy "ant.sky|skybox"
    .require_policy "ant.general|name"
    .require_policy "ant.scene|scene_object"
    .require_policy "ant.render|render"
    .require_policy "ant.render|render_queue"
    .require_policy "ant.test.material|simplerender2"
    .method "init"
    .method "init_world"
    .method "data_changed"

pipeline "init"
    .stage "init"
    .stage "post_init"

pipeline "exit"
    .stage "exit"

pipeline "update"
    .stage "timer"
    .stage "start_frame"
    .stage "data_changed"
    .stage  "widget"
    .pipeline "sky"
    .pipeline "scene"
    .pipeline "camera"
    .pipeline "render"
    .stage "end_frame"
    .stage "final"
