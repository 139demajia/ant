import "@ant.render"
import "@ant.animation"
import "@ant.camera"
import "@ant.asset"
import "@ant.objcontroller"

system "init_system"
    .implement "init_system.lua"
    .require_system "ant.camera|default_camera_controller"
    .require_policy "ant.render|light"
    .require_policy "ant.render|simplerender"
    .require_policy "ant.scene|scene_object"
    .require_policy "ant.render|render"
    .require_policy "ant.render|render_queue"
    .require_policy "ant.render|skinrender"
    .require_policy "ant.render|csm_queue"

pipeline "init"
    .stage "init"
    .stage "post_init"

pipeline "exit"
    .stage "exit"

pipeline "update"
    .stage "timer"
    .stage "start_frame"
    .stage "data_changed"
    .stage  "widget"
    .pipeline "sky"
    .pipeline "scene"
    .pipeline "camera"
    .pipeline "collider"
    .pipeline "animation"
    .pipeline "render"
    .pipeline "select"
    .pipeline "ui"
    .stage "end_frame"
    .stage "final"

pipeline "ui"
    .stage "ui_start"
    .stage "ui_update"
    .stage "ui_end"
