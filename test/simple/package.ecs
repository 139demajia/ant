import "@ant.general"
import "@ant.render"
import "@ant.animation"
import "@ant.sky"
import "@ant.camera"

system "init_system"
    .implement "init_system.lua"
    .require_policy "ant.general|name"
    .require_policy "ant.render|render"
    .require_policy "ant.render|light"
    .require_policy "ant.render|shadow_cast_policy"
    .require_policy "ant.animation|animation"
    .require_policy "ant.animation|skinning"
    .require_policy "ant.sky|procedural_sky"
    .method "init"

    pipeline "init"
    .stage "init"
    .stage "post_init"

pipeline "exit"
    .stage "exit"

pipeline "update"
    .stage "timer"
    .stage "data_changed"
    .stage  "widget"
    .pipeline "sky"
    .pipeline "scene"
    .pipeline "camera"
    .pipeline "collider"
    .pipeline "animation"
    .pipeline "render"
    .pipeline "select"
    .pipeline "ui"
    .stage "end_frame"
    .stage "final"

pipeline "ui"
    .stage "ui_start"
    .stage "ui_update"
    .stage "ui_end"

