import "@ant.asset"

system "font_system"
    .implement "font/fontrender.lua"
    .method "component_init"
    .method "camera_usage"
    .method "entity_remove"
    .method "exit"

policy "font"
    .require_policy "ant.scene|scene_object"
    .require_policy "ant.render|simplerender"
    .component "font"

policy "show_name"
    .require_system "ant.render|font_system"
    .require_policy "ant.render|font"
    .component "show_config"

component "font"
    .type "lua"

component "show_config"
    .type "lua"
