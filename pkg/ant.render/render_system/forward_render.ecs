pipeline "render_process"
    .stage "update_system_properties"
    .stage "commit_system_properties"
    .stage "render_preprocess"
    .stage "render_submit"
    .stage "render_postprocess"

system "forward_render_system"
    .implement "render_system/forward_render.lua"

policy "forward_render"
    .require_policy  "ant.render|render_queue"
    .require_system  "ant.render|forward_render_system"
    .require_system  "ant.render|pre_depth_system"
